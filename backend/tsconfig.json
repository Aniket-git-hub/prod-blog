{
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["src/**/*", "drizzle.config.ts"],
	"exclude": ["node_modules"]
}
